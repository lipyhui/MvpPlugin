<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>MvpCreatePlugin</name>
  <version>2.0</version>
  <vendor email="2458091214@qq.com" url="http://www.yom">lipy</vendor>

  <description><![CDATA[
      Android studio MVP框架插件，用于自动创建目录和MVP文件.<br>
    ]]></description>

  <change-notes><![CDATA[
      Android studio mvp plugin.<br>
      version code is 2.0<br>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="MvpPlugin.ID" class="MvpCreateAction" text="MvpHelper" description="生成Mvp框架代码">
      <add-to-group group-id="CodeMenu" anchor="first"/>
      <add-to-group group-id="NewGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>
    </action>
  </actions>

</idea-plugin>